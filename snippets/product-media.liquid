{% case media.media_type %}

  {% when 'image' %}

    <img
      src="{{ media | image_url: 'large' }}"
      alt="{{ media.preview_image.alt }}"
      loading="eager"
      width="100"
      height="100"
      class="w-full h-full object-hover">

  {% when 'external_video' %}
    {{ media | external_video_tag: class: 'w-full h-80 object-cover' }}

  {% when 'video' %}
    {{ media | video_tag: controls: true, class: 'w-full object-cover' }}

  {% when 'model' %}
    {{ media | model_viewer_tag }}

  {% else %}
    {{ media | media_tag }}

{% endcase %}